<view>
  <swiper indicator-dots="true" autoplay="true" circular="true">
    <swiper-item>
      <image src='/images/post/1.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/post/2.jpg'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/post/3.jpg'></image>
    </swiper-item>
  </swiper>
  <block wx:for='{{post_content}}' wx:key>
    <view class='post-container'>
    <view class='post-author-date'>
      <image class='post-author' src='{{item.author_img}}'></image>
      <text class='post-date'>{{item.date}}</text>
    </view>
    <text class='post-title'>{{item.title}}</text>
    <image class='post-image' src='{{item.post_img}}'></image>
    <text class='post-content'>{{item.content}}</text>
    <view class='post-like'>
      <image class='post-like-image' src='/images/post/shoucang.png'></image>
      <text class='post-like-font'>{{item.view_num}}</text>
      <image class='post-like-image' src='/images/post/pinlun.png'></image>
      <text class='post-like-font'>{{item.collect_num}}</text>
    </view>
  </view>
  </block>
</view>